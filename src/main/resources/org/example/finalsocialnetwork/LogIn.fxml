<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.Glow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="223.0" prefWidth="373.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.finalsocialnetwork.controllers.LogIn">
   <children>
      <Label layoutX="146.0" layoutY="22.0" text="Welcome!">
         <font>
            <Font name="Cambria Math" size="27.0" />
         </font>
         <effect>
            <Glow />
         </effect>
      </Label>
      <TextField fx:id="username" alignment="CENTER" layoutX="119.0" layoutY="81.0" promptText="Username" />
      <Button fx:id="loginButton" layoutX="169.0" layoutY="168.0" mnemonicParsing="false" onAction="#loginButtonClicked" text="Log in" />
      <Text fx:id="usernameError" fill="#ac4444" layoutX="146.0" layoutY="140.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Wrong username!" visible="false" />
   </children>
</AnchorPane>
